<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MatchActivity">

    <include android:id="@+id/toolbarm"
        layout="@layout/toolbar_m"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="标题"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="配色方案"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="风格"
            android:textSize="18sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <ImageView
                android:id="@+id/iv_outfit"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:background="@drawable/ic_noimg"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/tv_upbase"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/iv_outfit"
                android:text="打底"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_upin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/iv_outfit"
                android:layout_below="@id/tv_upbase"
                android:text="内搭"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_upcoat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/iv_outfit"
                android:layout_below="@id/tv_upin"
                android:text="外套"
                android:textSize="18sp"/>
<!--            <TextView-->
<!--                android:id="@+id/tv_bobase"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_toEndOf="@id/iv_outfit"-->
<!--                android:layout_below="@id/tv_upcoat"-->
<!--                android:text="打底"-->
<!--                android:textSize="18sp"/>-->
            <TextView
                android:id="@+id/tv_bo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/iv_outfit"
                android:layout_below="@id/tv_upcoat"
                android:text="下装"
                android:textSize="18sp"/>
<!--            <TextView-->
<!--                android:id="@+id/tv_sock"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_toEndOf="@id/iv_outfit"-->
<!--                android:layout_below="@id/tv_bo"-->
<!--                android:text="鞋子"-->
<!--                android:textSize="18sp"/>-->
            <TextView
                android:id="@+id/tv_shoe"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/iv_outfit"
                android:layout_below="@id/tv_bo"
                android:text="鞋子"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_other"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_toEndOf="@id/iv_outfit"
                android:layout_below="@id/tv_shoe"
                android:text="其他"
                android:textSize="18sp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:background="@color/colorFengXinPurple"/>


    </LinearLayout>

</LinearLayout>